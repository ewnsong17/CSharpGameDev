<Window x:Class="GameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="None" ImageSource="image/game_title.jpg" AlignmentX="Center" AlignmentY="Top"/>
        </Grid.Background>

        <Button Content="게임시작" HorizontalAlignment="Left" Margin="150,600,0,0" VerticalAlignment="Top" Width="250" Height="90" Click="GameStartClick"/>
        <Button Content="게임종료" HorizontalAlignment="Right" Margin="0,600,150,0" VerticalAlignment="Top" Width="250" Height="90" Click="GameEndClick"/>
    </Grid>
</Window>
